pipeline {
  agent {
    label 'nodejs-alpine'
  }
  
  environment {
    REGISTRY_CREDS = credentials('hub.docker.up')
  }
  
  stages {
    stage('Build') {
      steps {
        sh 'yarn install'
      }
    }
    stage('Test') {
      steps {
        sh 'yarn test'
      }
    }
    stage('Build Image') {
      steps {
        sh 'docker build -t $REGISTRY_CREDS_USR/jenkins-nodejs:latest .'
      }
    }
    stage('Push Image') {
      steps {
        sh 'docker push $REGISTRY_CREDS_USR/jenkins-nodejs:latest'
      }
    }
  }
}
